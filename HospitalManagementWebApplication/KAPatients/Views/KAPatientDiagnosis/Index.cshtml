@model IEnumerable<KAPatients.Models.PatientDiagnosis>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<h2 class="alert-danger">@TempData["noDiagnosisID"] </h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis.Name)
            </th>
            <th>
               Patient's Full Name
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Patient.FirstName)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="index" asp-controller="KAPatientTreatment" asp-route-id="@item.PatientDiagnosisId" asp-route-pName=" @item.Patient.LastName, @item.Patient.FirstName"
                   asp-route-dName="@item.Diagnosis.Name" asp-route-did="@item.DiagnosisId">
                    @Html.DisplayFor(modelItem => item.Diagnosis.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.LastName), @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)*@
            @*</td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientDiagnosisId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PatientDiagnosisId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PatientDiagnosisId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
